# file options

--exclude Tests/XCTestManifests.swift,Tests/BadConfig,Snapshots,Pods,Generated,Dime/Generated

# format options

--allman false
--binarygrouping 4,8
--commas always
--comments indent
--decimalgrouping 3,6
--elseposition same-line
--empty void
--exponentcase lowercase
--exponentgrouping disabled
--fractiongrouping disabled
--header ignore
--hexgrouping 4,8
--hexliteralcase uppercase
--ifdef indent
--indent 2
--indentcase true
--importgrouping testable-bottom
--linebreaks lf
--maxwidth none
--octalgrouping 4,8
--operatorfunc spaced
--patternlet hoist
--ranges spaced
--self remove
--semicolons inline
--stripunusedargs always
--swiftversion 5.0
--trimwhitespace always
--wraparguments preserve
--wrapcollections preserve
--modifierorder public,override
--stripunusedargs closure-only
--markextensions if-not-empty #mark types
--organizetypes class,struct,enum,extension #orgnaize declarations

# rules

--enable organizeDeclarations
--enable isEmpty
--enable markTypes
--disable preferKeyPath
